<?xml version="1.0"?>
<robot name="macroed" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:property name="AlturaBase" value="0.0965" />
    <xacro:property name="AlturaOmbro" value="0.0750" />
    <xacro:property name="AlturaBraco" value="0.0850" />
    <xacro:property name="AlturaAntebraco" value="0.0740" />
    <xacro:property name="AlturaFerramenta" value="0.0300" />
    <xacro:property name="MedidaPadrao" value="0.1000" />

    <material name="blue">
    <color rgba="0 0 0.8 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="${MedidaPadrao}" length="${AlturaBase}"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 ${AlturaBase/2}" />
        </visual>
    </link>

    <link name="Ombro">
        <visual>
            <geometry>
                <box size="${MedidaPadrao} ${MedidaPadrao} ${AlturaOmbro}"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 ${-AlturaOmbro/2}" />
        </visual>
    </link>

    <joint name="base_to_Ombro" type="prismatic">
        <parent link="base_link"/>
        <child link="Ombro"/>
        <limit effort="1000.0" lower="-0.2500" upper="-0.1000" velocity="0.5"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0 0 ${AlturaBase}" rpy="${pi} 0 0" />
    </joint>

    <link name="Braco">
        <visual>
            <geometry>
                <cylinder radius="${MedidaPadrao}" length="${AlturaBraco}"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 ${-AlturaBraco/2}" />
        </visual>
    </link>

    <joint name="Ombro_to_Braco" type="revolute">
        <parent link="Ombro"/>
        <child link="Braco"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
        <origin xyz="0.2500 0 0" />
    </joint>

    <link name="Antebraco">
        <visual>
            <geometry>
                <cylinder radius="${MedidaPadrao}" length="${AlturaAntebraco}"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 ${-AlturaAntebraco/2}" />
        </visual>
    </link>

    <joint name="Braco_to_Antebraco" type="revolute">
        <parent link="Braco"/>
        <child link="Antebraco"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
        <origin xyz="0.2500 0 0" />
    </joint>

    <link name="Ferramenta">
        <visual>
            <geometry>
                <box size="${MedidaPadrao} ${MedidaPadrao} ${AlturaFerramenta}"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 ${-AlturaFerramenta/2}" />
        </visual>
    </link>

    <joint name="Antebraco_to_Ferramenta" type="revolute">
        <parent link="Antebraco"/>
        <child link="Ferramenta"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
        <origin xyz="0 0 ${AlturaFerramenta}" />
    </joint>

</robot>
